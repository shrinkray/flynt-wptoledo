<flynt-component name="ListLogos" class="componentSpacing" {{ options.theme ? 'data-theme="' ~ options.theme ~ '"' }}>
  <div class="container" data-flow="layout">
    {% if preContentHtml %}
      <div data-size="medium" data-align="center" data-text-align="center">
        {{ preContentHtml|e('wp_kses_post') }}
      </div>
    {% endif %}
    <ul class="items">
      {% for item in items|filter(item => item.image) %}
        <li class="item {{ options.card ? 'boxPadding' }}" {{ options.card ? 'data-theme="reset"' }}>
          {% if item.link %}
            <a class="link" href="{{ item.link.url|e('esc_url') }}" title="{{ item.link.title|e }}" {{- item.link.is_external or item.link.is_target_blank ? ' target="_blank" rel="noopener noreferrer"' -}}>
              <span class="visuallyHidden">
                {{ item.link.title|e }}
              </span>
            </a>
          {% endif %}
          {% include 'Partials/_image.twig' with {image: item.image, link: item.link, type: options.card} only %}
        </li>
      {% endfor %}
    </ul>
  </div>
</flynt-component>
